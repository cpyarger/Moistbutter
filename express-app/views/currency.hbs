        $.ajax({
            type: 'POST',
            url: 'http://localhost:3000/botcon'
        });
      });
    </script>
    </script>

    <footer>
        <% include ../partials/footer %>
    </footer>
    <script>
    if (<%= sats.enable %>) {
      $("#onSwitch").html("Enabled")
      $("#onSwitch").addClass("btn btn-success")
    } else {
      $("#onSwitch").html("Disabled")
      $("#onSwitch").addClass("btn btn-danger")
    }

    $(".<%=classi%>").removeClass("<%=classi%>").addClass("active")

    </script>

</body>
</html>
